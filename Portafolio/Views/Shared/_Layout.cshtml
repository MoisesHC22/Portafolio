

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portafolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portafolio.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />


    <!--Cambiar el icono-->
    <link rel="shortcut icon" type="image/png" href="/img/Portafolio.png" asp-append-version="true" />

</head>
<body>
    <header>
        <nav id="ContenedorMenu" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
            
            <div class="container-fluid"  id="FondoMenu">
                <a class="navbar-brand text-white" id="tituloPagina" asp-area="" asp-controller="Home" asp-action="Index">MiPortafolio.com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item opcion">
                            <a class="nav-link text-white" id="OpcionesPrincipales" asp-area="" asp-controller="Home" asp-action="Home">Home</a>
                        </li>

                        <li class="nav-item opcion">
                            <a class="nav-link text-white" id="OpcionesPrincipales" asp-area="" asp-controller="Proyectos" asp-action="Proyectos">Lista de Proyectos</a>
                        </li>

                        <li class="nav-item opcion">
                            <a class="nav-link text-white" id="OpcionesPrincipales" asp-area="" asp-controller="Contacto" asp-action="Contacto">Contactame</a>
                        </li>

                    </ul>

                    <div class="dropdown text-end">

                        <div class="unirComp">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">

                            @if (!string.IsNullOrEmpty(ViewBag.ImgPerfil))
                            {
                                <img src="@ViewBag.ImgPerfil" alt="Perfil" id="ImgPerfil" />
                            }
                            else
                            {
                                <img src="/img/Perfil.png" alt="Perfil" id="ImgPerfil" />
                            }
                        </a>

                          @if (!string.IsNullOrEmpty(ViewBag.ImgPerfil))
                            {
                                <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle fs-4 text-white"
                                data-bs-toggle="dropdown" aria-expanded="false" id="IconoDesplegar">
                                </a>

                                <ul class="dropdown-menu text-small" id="Opciones">

                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Perfil" asp-action="ListaDeProyectos">Mis proyectos</a>
                                    </li>

                                    <li>
                                        <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="CerrarSesion">Cerrar sesion</a>
                                    </li>

                                </ul>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Portafolio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
